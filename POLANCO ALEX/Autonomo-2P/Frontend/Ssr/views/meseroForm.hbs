<div class="container">
    <br>

    <form action="/meseroForm/mesero/operar" method="POST">
        <input type="hidden" nombre="_id" value={{mesero._id}}>
        <div class="form-group">
            <label for="nombre">Nombre</label>
            <input type="text" class="form-control" id="nombre" nombre="nombre" value="{{mesero.nombre}}">
        </div>
        <div class="form-group">
            <label for="cedula">Cedula</label>
            <input type="text" class="form-control" id="cedula" name="cedula" value="{{mesero.cedula}}">
        </div>
        <div class="form-group">
            <label for="sueldobasico">Sueldo Basico</label>
            <input type="text" class="form-control" id="sueldobasico" name="sueldobasico" value="{{mesero.sueldobasico}}">
        </div>
        <div class="form-group">
            <label for="nivel">Nivel</label>
            <input type="text" class="form-control" id="nivel" name="nivel" value="{{mesero.nivel}}">
        </div>
        <button type="submit" class="btn btn-primary">Aceptar</button>
        <a href="/" class="btn btn-danger" >Cancelar</a>
    </form>

</div>